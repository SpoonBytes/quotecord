{
	"name": "quotecord",
	"version": "1.2.0",
	"description": "Discord self-bot for quoting.",
	"main": "src/app.js",
	"scripts": {
		"start": "electron .",
		"build": "electron-builder -mwl"
	},
	"author": "Spencer Berenson",
	"license": "MIT",
	"dependencies": {
		"discord.js": "^11.5.1"
	},
	"devDependencies": {
		"electron": "^9.1.0",
		"electron-builder": "^21.2.0"
	},
	"build": {
		"appId": "me.berenson.quotecord",
		"productName": "Quotecord",
		"directories": {
			"buildResources": "src/build"
		},
		"extraFiles": [
			{
				"from": "src/build/icon.png",
				"to": "build/icon.png"
			}
		],
		"win": {
			"target": "nsis"
		},
		"mac": {
			"target": "dmg",
			"category": "Utilities",
			"identity": "null"
		},
		"linux": {
			"target": "AppImage",
			"category": "Utilities"
		}
	}
}
